@page "/{section}/{category?}"
@model CMS.Pages.CategoryModel
@{
    ViewData["Title"] = Model.CategoryName;
    bool isHub = Model.IsHub;
    string sectionUrl = RouteData.Values["section"]?.ToString();
}

<style>
    body {
        background-color: #ffffff !important;
    }

    .hust-breadcrumb {
        font-family: Arial, sans-serif;
        font-size: 15px;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 25px;
        letter-spacing: 0.5px;
    }

        .hust-breadcrumb a {
            color: #B3000F;
            text-decoration: none;
        }

            .hust-breadcrumb a:hover {
                opacity: 0.8;
                text-decoration: none !important;
            }

        .hust-breadcrumb .separator {
            margin: 0 10px;
            color: #B3000F;
            font-weight: normal;
        }

    .btn-hub {
        border: 1px solid #B3000F;
        color: #B3000F;
        background: transparent;
        transition: all 0.2s;
    }

        .btn-hub:hover {
            background-color: #B3000F;
            color: #ffffff;
        }

    .article-title {
        font-weight: bold;
        color: #222222;
        text-decoration: none;
        transition: color 0.2s;
        line-height: 1.4;
    }

        .article-title:hover {
            color: #B3000F;
        }

    .article-meta {
        color: #777777;
        font-size: 0.85rem;
        margin-top: 8px;
    }

    .article-item {
        border-bottom: 1px solid #eeeeee;
        padding-bottom: 20px;
        margin-bottom: 20px;
    }
</style>

<div class="container py-4 mb-5">
    <div class="row">
        <div class="col-12">
            <div class="hust-breadcrumb">
                <a href="/">TRANG CHỦ</a>
                <span class="separator">›</span>

                @if (Model.ParentMenu != null)
                {
                    <a href="/@sectionUrl">@Model.ParentMenu.Name.ToUpper()</a>
                    <span class="separator">›</span>
                }

                <span style="color: #B3000F;">@Model.CategoryName.ToUpper()</span>
            </div>
        </div>
    </div>

    @if (isHub && Model.SidebarMenus != null)
    {
        <div class="row mb-5 mt-2">
            <div class="col-12 d-flex gap-2 flex-wrap">
                @foreach (var child in Model.SidebarMenus)
                {
                    string childUrl = ("/" + child.Url).Replace("//", "/");
                    <a href="@childUrl" class="btn btn-hub fw-bold px-4 rounded-0">
                        @child.Name.ToUpper()
                    </a>
                }
            </div>
        </div>
    }

    <div class="row mt-3">
        @if (!isHub)
        {
            <div class="col-lg-3 mb-4 mb-lg-0 pe-lg-4">
                <div class="list-group sidebar-menu">
                    @foreach (var menu in Model.SidebarMenus)
                    {
                        var isActive = (menu.Name == Model.CategoryName) ? "active" : "";
                        string menuUrl = ("/" + menu.Url).Replace("//", "/");
                        <a href="@menuUrl" class="list-group-item list-group-item-action @isActive">
                            @menu.Name
                        </a>
                    }
                </div>
            </div>
        }

        <div class="@(isHub ? "col-12" : "col-lg-9")">
            @if (Model.Articles != null && Model.Articles.Any())
            {
                <div class="@(isHub ? "row row-cols-1 row-cols-md-3 g-4" : "")">
                    @foreach (var item in Model.Articles)
                    {
                        var thumbUrl = string.IsNullOrEmpty(item.Thumbnail)
                        ? "/images/default-thumbnail.jpg"
                        : item.Thumbnail;

                        if (isHub)
                        {
                            <div class="col">
                                <div class="card h-100 border-0 bg-transparent">
                                    <a href="/bai-viet/@item.Id" style="display: block;">
                                        <div style="height: 200px; border-radius: 4px; background: url('@thumbUrl') top center / cover no-repeat #f0f0f0;">
                                        </div>
                                    </a>
                                    <div class="card-body px-0 py-0 mt-3">
                                        <a href="/bai-viet/@item.Id" class="article-title fs-5 d-block">@item.Title</a>
                                        <div class="article-meta">
                                            <span><i class="bi bi-clock me-1"></i> @item.CreatedAt.ToString("dd/MM/yyyy")</span>
                                            @if (item.ViewCount > 0)
                                            {
                                                <span class="ms-3"><i class="bi bi-eye me-1"></i> @item.ViewCount</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row article-item align-items-center">
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <a href="/bai-viet/@item.Id" style="display: block;">
                                        <div style="height: 180px; border-radius: 4px; background: url('@thumbUrl') top center / cover no-repeat #f0f0f0;">
                                        </div>
                                    </a>
                                </div>
                                <div class="col-md-8">
                                    <a href="/bai-viet/@item.Id" class="article-title fs-4 d-block mb-2">
                                        @item.Title
                                    </a>
                                    <div class="article-meta">
                                        <span><i class="bi bi-clock me-1"></i> @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                                        @if (item.ViewCount > 0)
                                        {
                                            <span class="ms-3"><i class="bi bi-eye me-1"></i> Đã xem: @item.ViewCount</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
            else
            {
                <div class="alert alert-light border p-5 text-center text-muted">
                    <i class="bi bi-newspaper fs-1 mb-3 d-block"></i>
                    Chuyên mục này hiện chưa có bài viết nào.
                </div>
            }
        </div>
    </div>
</div>