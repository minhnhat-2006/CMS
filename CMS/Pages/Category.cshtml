@page "/{section}/{category?}"
@model CMS.Pages.CategoryModel
@{
    ViewData["Title"] = Model.CategoryName;
    bool isHub = Model.IsHub;

    // LẤY SECTION TỪ URL (Hoàn toàn động)
    string sectionUrl = RouteData.Values["section"]?.ToString();
}

<style>
    :root {
        --bk-red: #B3000F;
        --bk-text: #333333;
    }

    .custom-breadcrumb {
        font-weight: 700;
        text-transform: uppercase;
        font-size: 1.1rem;
        margin-bottom: 30px;
        color: var(--bk-red);
    }

    .custom-breadcrumb a {
        color: var(--bk-red);
        text-decoration: none;
    }

    .custom-breadcrumb .separator {
        margin: 0 10px;
        font-size: 0.9rem;
    }

    .sidebar-menu .list-group-item {
        border: none;
        border-bottom: 1px solid #e0e0e0;
        padding: 15px 20px;
        font-size: 14px;
        font-weight: 600;
        color: var(--bk-text);
        text-transform: uppercase;
        transition: all 0.2s ease;
    }

    .sidebar-menu .list-group-item:hover {
        background-color: #f9f9f9;
        color: var(--bk-red);
    }

    .sidebar-menu .list-group-item.active {
        background-color: var(--bk-red);
        color: white;
        border-color: var(--bk-red);
    }

    .article-item {
        margin-bottom: 30px;
    }

    .article-thumbnail {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 4px;
    }

    .article-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #000;
        line-height: 1.4;
        margin-bottom: 10px;
        transition: color 0.2s ease;
        text-decoration: none;
        display: block;
    }

    .article-title:hover {
        color: var(--bk-red);
    }

    .article-meta {
        font-size: 0.85rem;
        color: #888;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .hub-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .hub-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
    }
</style>

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="custom-breadcrumb">
                <a href="/">TRANG CHỦ</a>
                <span class="separator"><i class="bi bi-chevron-right"></i></span>
                
                @if (Model.ParentMenu != null)
                {
                    <a href="/@sectionUrl">@Model.ParentMenu.Name.ToUpper()</a>
                    <span class="separator"><i class="bi bi-chevron-right"></i></span>
                }
                
                <span>@Model.CategoryName.ToUpper()</span>
            </div>
        </div>
    </div>

    @if (isHub && Model.SidebarMenus != null)
    {
        <div class="row mb-5">
            <div class="col-12 d-flex gap-3 flex-wrap">
                @foreach (var child in Model.SidebarMenus)
                {
                    // Cắt bỏ sectionUrl, chỉ dùng Url từ DB và làm sạch dấu gạch chéo
                    string childUrl = ("/" + child.Url).Replace("//", "/");

                    <a href="@childUrl" class="btn btn-outline-danger fw-bold rounded-pill px-4">
                        @child.Name
                    </a>
                }
            </div>
        </div>
    }

    <div class="row">
        @if (!isHub)
        {
            <div class="col-lg-3 mb-4 mb-lg-0">
                <div class="list-group sidebar-menu rounded-0 shadow-sm">
                    @foreach (var menu in Model.SidebarMenus)
                    {
                        var isActive = (menu.Name == Model.CategoryName) ? "active" : "";

                        // Cắt bỏ sectionUrl tương tự ở trên
                        string menuUrl = ("/" + menu.Url).Replace("//", "/");

                        <a href="@menuUrl" class="list-group-item list-group-item-action @isActive">
                            @menu.Name
                        </a>
                    }
                </div>
            </div>
        }

        <div class="@(isHub ? "col-12" : "col-lg-9")">
            @if (Model.Articles != null && Model.Articles.Any())
            {
                <div class="@(isHub ? "row row-cols-1 row-cols-md-3 g-4" : "")">
                    @foreach (var item in Model.Articles)
                    {
                        var thumbUrl = string.IsNullOrEmpty(item.Thumbnail) 
                                     ? "/images/default-thumbnail.jpg" 
                                     : item.Thumbnail;

                        if (isHub)
                        {
                            <div class="col">
                                <div class="card h-100 border-0 shadow-sm hub-card">
                                    <a href="/bai-viet/@item.Id">
                                        <img src="@thumbUrl" class="card-img-top article-thumbnail" alt="@item.Title">
                                    </a>
                                    <div class="card-body px-0 pt-3 pb-0">
                                        <a href="/bai-viet/@item.Id" class="article-title fs-5 mb-2">@item.Title</a>
                                        <div class="article-meta">
                                            <span><i class="bi bi-clock"></i> @item.CreatedAt.ToString("dd/MM/yyyy")</span>
                                            @if (item.ViewCount > 0)
                                            {
                                                <span><i class="bi bi-eye"></i> @item.ViewCount</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row article-item">
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <a href="/bai-viet/@item.Id">
                                        <img src="@thumbUrl" class="article-thumbnail shadow-sm" alt="@item.Title">
                                    </a>
                                </div>
                                <div class="col-md-8">
                                    <a href="/bai-viet/@item.Id" class="article-title">
                                        @item.Title
                                    </a>
                                    <div class="article-meta">
                                        <span><i class="bi bi-clock"></i> @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                                        @if (item.ViewCount > 0)
                                        {
                                            <span><i class="bi bi-eye"></i> Đã xem: @item.ViewCount</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
            else
            {
                <div class="alert alert-light border p-5 text-center text-muted">
                    <i class="bi bi-newspaper fs-1 mb-3 d-block"></i>
                    Chuyên mục này hiện chưa có bài viết nào.
                </div>
            }
        </div>
    </div>
</div>