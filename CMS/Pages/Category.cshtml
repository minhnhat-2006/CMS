@page "/{section}/{category?}"
@model CMS.Pages.CategoryModel
@{
    ViewData["Title"] = Model.CategoryName;
    bool isHub = Model.IsHub;
    string sectionUrl = RouteData.Values["section"]?.ToString();
}

<style>
    body {
        background-color: #ffffff !important;
    }

    .hust-breadcrumb {
        font-family: Arial, sans-serif;
        font-size: 15px;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 25px;
        letter-spacing: 0.5px;
    }

        .hust-breadcrumb a {
            color: #B3000F;
            text-decoration: none;
        }

            .hust-breadcrumb a:hover {
                opacity: 0.8;
                text-decoration: none !important;
            }

        .hust-breadcrumb .separator {
            margin: 0 10px;
            color: #B3000F;
            font-weight: normal;
        }

    .btn-hub {
        border: 2px solid #B3000F;
        color: #B3000F;
        background: transparent;
        transition: all 0.2s;
        border-radius: 4px;
    }

        .btn-hub:hover, .btn-hub.active {
            background-color: #B3000F;
            color: #ffffff;
        }

    .article-title {
        font-weight: bold;
        color: #222222;
        text-decoration: none;
        transition: color 0.2s;
        line-height: 1.4;
    }

        .article-title:hover {
            color: #B3000F;
        }

    .article-meta {
        color: #777777;
        font-size: 0.85rem;
        margin-top: 8px;
    }

    .article-item {
        border-bottom: 1px solid #eeeeee;
        padding-bottom: 20px;
        margin-bottom: 20px;
    }

    .hust-card {
        border-radius: 6px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.10);
        background: #fff;
        transition: box-shadow 0.2s, transform 0.2s;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .hust-card:hover {
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
            transform: translateY(-3px);
        }

    .hust-card-thumb {
        width: 100%;
        height: 200px;
        background-size: cover;
        background-position: top center;
        background-repeat: no-repeat;
        background-color: #e9ecef;
        flex-shrink: 0;
    }

    .hust-card-body {
        padding: 14px 16px 16px 16px;
        display: flex;
        flex-direction: column;
        flex: 1;
    }

    .hust-card-title {
        font-size: 0.97rem;
        font-weight: 700;
        color: #1a1a1a;
        text-decoration: none;
        line-height: 1.45;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

        .hust-card-title:hover {
            color: #B3000F;
        }

    .hust-card-meta {
        font-size: 0.82rem;
        color: #888;
        margin-top: auto;
        padding-top: 10px;
    }

    .hust-card-col {
        transition: opacity 0.2s;
    }

        .hust-card-col.hidden {
            display: none;
        }
</style>

<div class="container py-4 mb-5">
    <div class="row">
        <div class="col-12">
            <div class="hust-breadcrumb">
                <a href="/">TRANG CHỦ</a>
                <span class="separator">›</span>

                @if (Model.ParentMenu != null)
                {
                    <a href="/@sectionUrl">@Model.ParentMenu.Name.ToUpper()</a>
                    <span class="separator">›</span>
                }

                <span style="color: #B3000F;">@Model.CategoryName.ToUpper()</span>
            </div>
        </div>
    </div>

    @if (isHub && Model.SidebarMenus != null)
    {
        <div class="row mb-4 mt-2">
            <div class="col-12 d-flex gap-2 flex-wrap">
                
                <button class="btn btn-hub fw-bold px-4 active" onclick="filterCategory(this, 'all')">
                    TẤT CẢ
                </button>
              
                @foreach (var child in Model.SidebarMenus)
                {
                    <button class="btn btn-hub fw-bold px-4" onclick="filterCategory(this, '@child.Name')">
                        @child.Name.ToUpper()
                    </button>
                }
            </div>
        </div>
    }

    <div class="row mt-3">
        @if (!isHub)
        {
            <div class="col-lg-3 mb-4 mb-lg-0 pe-lg-4">
                <div class="list-group sidebar-menu">
                    @foreach (var menu in Model.SidebarMenus)
                    {
                        var isActive = (menu.Name == Model.CategoryName) ? "active" : "";
                        string menuUrl = ("/" + menu.Url).Replace("//", "/");
                        <a href="@menuUrl" class="list-group-item list-group-item-action @isActive">
                            @menu.Name
                        </a>
                    }
                </div>
            </div>
        }

        <div class="@(isHub ? "col-12" : "col-lg-9")">
            @if (Model.Articles != null && Model.Articles.Any())
            {
                <div class="@(isHub ? "row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4" : "")" id="articlesGrid">
                    @foreach (var item in Model.Articles)
                    {
                        var thumbUrl = string.IsNullOrEmpty(item.Thumbnail)
                        ? "/images/default-thumbnail.jpg"
                        : item.Thumbnail;

                        if (isHub)
                        {
                            <div class="col hust-card-col" data-category="@item.Category">
                                <a href="/bai-viet/@item.Id" style="text-decoration: none;">
                                    <div class="hust-card">
                                        <div class="hust-card-thumb"
                                             style="background-image: url('@thumbUrl');">
                                        </div>
                                        <div class="hust-card-body">
                                            <span class="hust-card-title">@item.Title</span>
                                            <div class="hust-card-meta">
                                                @item.CreatedAt.ToString("dd/MM/yyyy")
                                                @if (item.ViewCount > 0)
                                                {
                                                    <span class="ms-2">· @item.ViewCount lượt xem</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="row article-item align-items-center">
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <a href="/bai-viet/@item.Id" style="display: block;">
                                        <div style="height: 180px; border-radius: 4px; background: url('@thumbUrl') top center / cover no-repeat #f0f0f0;">
                                        </div>
                                    </a>
                                </div>
                                <div class="col-md-8">
                                    <a href="/bai-viet/@item.Id" class="article-title fs-4 d-block mb-2">
                                        @item.Title
                                    </a>
                                    <div class="article-meta">
                                        <span><i class="bi bi-clock me-1"></i> @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                                        @if (item.ViewCount > 0)
                                        {
                                            <span class="ms-3"><i class="bi bi-eye me-1"></i> Đã xem: @item.ViewCount</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
            else
            {
                <div class="alert alert-light border p-5 text-center text-muted">
                    <i class="bi bi-newspaper fs-1 mb-3 d-block"></i>
                    Chuyên mục này hiện chưa có bài viết nào.
                </div>
            }
        </div>
    </div>
</div>

<script>
    function filterCategory(btn, category) {
        // Cập nhật trạng thái active cho nút
        document.querySelectorAll('.btn-hub').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        // Lọc bài viết
        document.querySelectorAll('.hust-card-col').forEach(card => {
            if (category === 'all' || card.dataset.category === category) {
                card.classList.remove('hidden');
            } else {
                card.classList.add('hidden');
            }
        });
    }
</script>