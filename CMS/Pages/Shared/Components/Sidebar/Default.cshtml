@using CMS.Models
@model IEnumerable<SidebarItem>

<style>
    /* CSS cho Sidebar */
    .sidebar-widget {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 8px;
        margin-bottom: 20px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.02);
    }

    .sidebar-header {
        background: #003366; /* Màu xanh đậm thương hiệu */
        color: #fff;
        padding: 10px 15px;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.9rem;
        border-bottom: 2px solid #ffcc00; /* Viền vàng điểm nhấn */
    }

    /* ITEM LÀ LINK (Bấm được) */
    a.sidebar-item {
        display: block;
        padding: 12px 15px;
        color: #333;
        text-decoration: none;
        border-bottom: 1px solid #f5f5f5;
        transition: 0.2s;
        font-size: 0.95rem;
    }

        a.sidebar-item:hover {
            background-color: #f0f8ff;
            color: #0056b3;
            padding-left: 20px; /* Hiệu ứng trượt sang phải */
        }

        a.sidebar-item i {
            color: #ffcc00;
            margin-right: 8px;
            font-size: 0.8rem;
        }

    /* ITEM LÀ NỘI DUNG TĨNH (Không bấm được, ví dụ: Hotline, Banner) */
    .sidebar-content-block {
        padding: 15px;
        font-size: 0.9rem;
        color: #555;
        border-bottom: 1px solid #f5f5f5;
    }

        .sidebar-content-block img {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
            margin-top: 5px;
        }
</style>

@if (Model != null && Model.Any())
{
    <div class="sidebar-wrapper">
        <div class="sidebar-widget">

            @* 1. TIÊU ĐỀ: Lấy tên Category của item đầu tiên *@
            <div class="sidebar-header">
                @{
                    var firstItem = Model.First();
                    // Nếu có Category thì hiện tên Category, không thì hiện "Thông tin"
                    var title = !string.IsNullOrEmpty(firstItem.Category) ? firstItem.Category : "Thông tin nổi bật";
                }
                <i class="bi bi-list-ul me-2"></i> @title
            </div>

            @* 2. DANH SÁCH *@
            <div>
                @foreach (var item in Model)
                {
                    // --- XỬ LÝ LOGIC LINK ---
                    string linkUrl = null;

                    // Ưu tiên 1: Link ngoài (cột LinkUrl trong DB)
                    if (!string.IsNullOrEmpty(item.LinkUrl))
                    {
                        linkUrl = item.LinkUrl;
                    }
                    // Ưu tiên 2: Link bài viết nội bộ (cột ContentPageId trong DB)
                    else if (item.ContentPageId.HasValue && item.ContentPage != null)
                    {
                        // Tạo link chuẩn: /bai-viet/ID/Slug
                        linkUrl = $"/bai-viet/{item.ContentPage.Id}/{item.ContentPage.Slug}";
                    }

                    // --- HIỂN THỊ ---

                    if (linkUrl != null)
                    {
                        // TRƯỜNG HỢP 1: CÓ LINK -> Dùng thẻ <a> (Bấm được)
                        <a href="@linkUrl" class="sidebar-item">
                            <i class="bi bi-caret-right-fill"></i>
                            @item.Title
                        </a>
                    }
                    else
                    {
                        // TRƯỜNG HỢP 2: KHÔNG CÓ LINK -> Dùng thẻ <div> (Chỉ đọc, KHÔNG bấm được)
                        <div class="sidebar-content-block">
                            @if (!string.IsNullOrEmpty(item.Title) && item.Title != "Banner")
                            {
                                <div class="fw-bold text-dark mb-1">@item.Title</div>
                            }

                            @* Hiển thị nội dung HTML (Hotline, Ảnh...) *@
                            @if (!string.IsNullOrEmpty(item.Content))
                            {
                                <div>@Html.Raw(item.Content)</div>
                            }
                        </div>
                    }
                }
            </div>
        </div>
    </div>
}