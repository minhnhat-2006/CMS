@using CMS.Models
@model IEnumerable<NavigationMenu>

<style>
    /* Bấm thu gọn lại, giữ nguyên 100% CSS cũ của bạn ở đây nhé */
    .sidebar-widget {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 8px;
        margin-bottom: 20px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.02);
    }

    .sidebar-header {
        background: #003366;
        color: #fff;
        padding: 10px 15px;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.9rem;
        border-bottom: 2px solid #ffcc00;
    }

    a.sidebar-item {
        display: block;
        padding: 12px 15px;
        color: #333;
        text-decoration: none;
        border-bottom: 1px solid #f5f5f5;
        transition: 0.2s;
        font-size: 0.95rem;
    }

        a.sidebar-item:hover {
            background-color: #f0f8ff;
            color: #0056b3;
            padding-left: 20px;
        }

        a.sidebar-item i {
            color: #ffcc00;
            margin-right: 8px;
            font-size: 0.8rem;
        }

    .sidebar-content-block {
        padding: 15px;
        font-size: 0.9rem;
        color: #555;
        border-bottom: 1px solid #f5f5f5;
    }

        .sidebar-content-block img {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
            margin-top: 5px;
        }
</style>

@{
    var config = ViewData["SidebarConfig"] as SidebarItem;
    var title = config?.Title ?? Model?.FirstOrDefault()?.Name ?? "Thông tin liên quan";
    var currentPath = Context.Request.Path.Value?.ToLower() ?? "";
}

<div class="sidebar-wrapper">
    <div class="sidebar-widget">
        <div class="sidebar-header">
            <i class="bi bi-list-ul me-2"></i> @title
        </div>

        @if (Model != null && Model.Any())
        {
            <div>
                @foreach (var item in Model)
                {
                    string itemUrl = item.Url;

                    // Mượn y chang logic của Menu Ngang:
                    // Nếu là bài 1-1 (Url = "#"), sinh link bài viết
                    if (itemUrl == "#" && item.ContentPageId.HasValue && item.LinkedPage != null)
                    {
                        itemUrl = $"/bai-viet/{item.LinkedPage.Id}/{item.LinkedPage.Slug}";
                    }

                    // Nếu là bài 1-N (Url = "/tt/hd"), tự động làm sạch và dùng luôn!
                    if (!string.IsNullOrEmpty(itemUrl) && itemUrl != "#")
                    {
                        itemUrl = ("/" + itemUrl).Replace("//", "/");
                    }

                    string activeClass = (itemUrl != "#" && currentPath == itemUrl.ToLower()) ? "bg-light text-primary fw-bold" : "";

                    <a href="@itemUrl" class="sidebar-item @activeClass">
                        <i class="bi bi-caret-right-fill"></i>
                        @item.Name
                    </a>
                }
            </div>
        }

        @if (config != null && !string.IsNullOrEmpty(config.Content))
        {
            <div class="sidebar-content-block">
                @Html.Raw(config.Content)
            </div>
        }
    </div>
</div>