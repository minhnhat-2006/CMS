@using CMS.Models
@model IEnumerable<ContentPage>

<style>
    /* Bấm thu gọn lại, giữ nguyên 100% CSS cũ của bạn ở đây nhé */
    .sidebar-widget {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 8px;
        margin-bottom: 20px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.02);
    }

    .sidebar-header {
        background: #003366;
        color: #fff;
        padding: 10px 15px;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.9rem;
        border-bottom: 2px solid #ffcc00;
    }

    a.sidebar-item {
        display: block;
        padding: 12px 15px;
        color: #333;
        text-decoration: none;
        border-bottom: 1px solid #f5f5f5;
        transition: 0.2s;
        font-size: 0.95rem;
    }

        a.sidebar-item:hover {
            background-color: #f0f8ff;
            color: #0056b3;
            padding-left: 20px;
        }

        a.sidebar-item i {
            color: #ffcc00;
            margin-right: 8px;
            font-size: 0.8rem;
        }

    .sidebar-content-block {
        padding: 15px;
        font-size: 0.9rem;
        color: #555;
        border-bottom: 1px solid #f5f5f5;
    }

        .sidebar-content-block img {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
            margin-top: 5px;
        }
</style>

@{
    var config = ViewData["SidebarConfig"] as SidebarItem;
    var firstArticle = Model?.FirstOrDefault();
    var title = config?.Title ?? firstArticle?.Category ?? "Thông tin liên quan";

    // 🔥 BẮT LẤY CỜ TỪ C#
    bool isStaticType = ViewData["IsStaticType"] as bool? ?? false;
}

<div class="sidebar-wrapper">
    <div class="sidebar-widget">
        <div class="sidebar-header">
            <i class="bi bi-list-ul me-2"></i> @title
        </div>

        @if (Model != null && Model.Any())
        {
            <div>
                @foreach (var article in Model)
                {
                    string articleUrl = "";
                    string cat = (article.Category ?? "").Trim('/');
                    string slg = (article.Slug ?? "").Trim('/');

                    // CHIA 2 LUỒNG CHÍNH XÁC 100%
                    if (isStaticType)
                    {
                        // 1. Luồng 1-1 (Link: /bai-viet/Id/Slug)
                        articleUrl = $"/bai-viet/{article.Id}/{slg}";
                    }
                    else
                    {
                        // 2. Luồng 1-N (Link: /Category/Slug)
                        // Máy lọc rác: Nếu Slug có chứa luôn tên cha thì gọt đi
                        if (slg.StartsWith(cat + "/"))
                        {
                            slg = slg.Substring(cat.Length + 1);
                        }
                        articleUrl = $"/{cat}/{slg}";
                    }

                    // Ép đúng chuẩn 1 gạch chéo
                    articleUrl = ("/" + articleUrl).Replace("//", "/");

                    <a href="@articleUrl" class="sidebar-item">
                        <i class="bi bi-caret-right-fill"></i>
                        @article.Title
                    </a>
                }
            </div>
        }

        @if (config != null && !string.IsNullOrEmpty(config.Content))
        {
            <div class="sidebar-content-block">
                @Html.Raw(config.Content)
            </div>
        }
        else if (Model == null || !Model.Any())
        {
            <div class="sidebar-content-block text-muted fst-italic">
                Không có dữ liệu bổ sung.
            </div>
        }
    </div>
</div>