@using CMS.Models
@model IEnumerable<ContentPage>

<style>
    /* Bấm thu gọn lại, giữ nguyên 100% CSS cũ của bạn ở đây nhé */
    .sidebar-widget {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 8px;
        margin-bottom: 20px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.02);
    }

    .sidebar-header {
        background: #003366;
        color: #fff;
        padding: 10px 15px;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.9rem;
        border-bottom: 2px solid #ffcc00;
    }

    a.sidebar-item {
        display: block;
        padding: 12px 15px;
        color: #333;
        text-decoration: none;
        border-bottom: 1px solid #f5f5f5;
        transition: 0.2s;
        font-size: 0.95rem;
    }

        a.sidebar-item:hover {
            background-color: #f0f8ff;
            color: #0056b3;
            padding-left: 20px;
        }

        a.sidebar-item i {
            color: #ffcc00;
            margin-right: 8px;
            font-size: 0.8rem;
        }

    .sidebar-content-block {
        padding: 15px;
        font-size: 0.9rem;
        color: #555;
        border-bottom: 1px solid #f5f5f5;
    }

        .sidebar-content-block img {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
            margin-top: 5px;
        }
</style>

@{
    // 1. Lấy cấu hình Sidebar từ ViewData
    var config = ViewData["SidebarConfig"] as SidebarItem;

    // 2. LOGIC TIÊU ĐỀ AN TOÀN (Dùng FirstOrDefault thay vì First để không bị crash)
    var firstArticle = Model?.FirstOrDefault();
    var title = config?.Title
                ?? firstArticle?.Category
                ?? "Thông tin liên quan";
}

@* SIDEBAR PHẢI LUÔN HIỆN (Dù có bài viết hay không, để còn hiện nội dung tĩnh) *@
<div class="sidebar-wrapper">
    <div class="sidebar-widget">

        @* 1. TIÊU ĐỀ SIDEBAR *@
        <div class="sidebar-header">
            <i class="bi bi-list-ul me-2"></i> @title
        </div>

        @* 2. DANH SÁCH BÀI VIẾT (Chỉ hiện nếu có bài) *@
        @if (Model != null && Model.Any())
        {
            <div>
                @foreach (var article in Model)
                {
                    string articleUrl = "";

                    // Cơ chế URL 2 cửa:
                    // Nếu không có Category -> Là Trang tĩnh (1-1)
                    if (string.IsNullOrEmpty(article.Category))
                    {
                        articleUrl = $"/bai-viet/{article.Id}/{article.Slug}";
                    }
                    // Nếu có Category -> Là Chuyên mục (1-N)
                    else
                    {
                        articleUrl = $"/{article.Category}/{article.Slug}";
                    }

                    // Lưới lọc cuối cùng: Quét sạch double slash (vd: /tt//dt -> /tt/dt)
                    articleUrl = articleUrl.Replace("//", "/");

                    <a href="@articleUrl" class="sidebar-item">
                        <i class="bi bi-caret-right-fill"></i>
                        @article.Title
                    </a>
                }
            </div>
        }

        @* 3. HIỂN THỊ NỘI DUNG TĨNH (Banner, HTML tự do...) *@
        @if (config != null && !string.IsNullOrEmpty(config.Content))
        {
            <div class="sidebar-content-block">
                @Html.Raw(config.Content)
            </div>
        }
        else if (Model == null || !Model.Any())
        {
            @* Nếu cả bài viết và nội dung tĩnh đều không có, hiện một thông báo nhẹ *@
            <div class="sidebar-content-block text-muted fst-italic">
                Không có dữ liệu bổ sung.
            </div>
        }

    </div>
</div>