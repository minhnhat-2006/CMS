@page
@model CMS.Pages.LoginModel
@{
    ViewData["Title"] = "Đăng nhập hệ thống";
}

<style>
    body {
        background-color: #f0f2f5;
    }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    .login-container {
        width: 100%;
        max-width: 400px;
        padding: 30px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        text-align: center;
    }

    .brand-color {
        color: #002147;
        font-weight: bold;
    }

    .btn-school {
        background-color: #002147;
        color: white;
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        margin-top: 15px;
    }

        .btn-school:hover {
            background-color: #001a38;
        }
</style>

<div class="login-wrapper">
    <div class="login-container">
        <h3 class="brand-color mb-4">ĐĂNG NHẬP</h3>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger p-2">@Model.ErrorMessage</div>
        }

        @if (Request.Query["error"] == "invalid_domain")
        {
            <div class="alert alert-danger p-3 text-center shadow-sm" style="font-size: 0.9rem; border-radius: 8px;">
                <i class="fas fa-exclamation-circle text-danger fs-4 mb-2"></i><br />
                Tài khoản không tồn tại hoặc không đúng, vui lòng liên hệ bên phía nhà trường để biết thêm chi tiết về thông tin tài khoản!
            </div>
        }

        <form method="post">
            <div class="mb-3 text-start">
                <label class="form-label">Tài khoản</label>
                <input type="text" asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập" required />
            </div>
            <div class="mb-3 text-start">
                <label class="form-label">Mật khẩu</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" required />
            </div>
            <button type="submit" class="btn btn-school">ĐĂNG NHẬP</button>
        </form>

        <hr class="my-4" />

        <div class="text-center">
            <p class="text-muted fw-bold" style="font-size: 0.8rem;">HOẶC ĐĂNG NHẬP VỚI</p>

            <form asp-page-handler="GoogleLogin" method="post">
                <button type="submit" class="btn btn-outline-danger w-100 fw-bold py-2 shadow-sm d-flex justify-content-center align-items-center">
                    <i class="fab fa-google me-2" style="font-size: 1.2rem;"></i> Tài khoản Google
                </button>
            </form>
        </div>

        <div class="mt-4 text-muted small">
            <a href="/" class="text-decoration-none text-secondary">← Quay về trang chủ</a>
        </div>
    </div>
</div>