@page
@model CMS.Pages.Admin.Wizard.Step2_ArticleModel
@{
    ViewData["Title"] = "Bước 2: Viết nội dung bài viết";
}

<style>
    /* 1. NỀN CHUNG */
    body {
        background-color: #f0f2f5;
    }

    /* 2. CSS THANH TIẾN TRÌNH */
    .wizard-progress {
        display: flex;
        justify-content: space-between;
        position: relative;
        margin-bottom: 3rem;
        padding: 0 5rem;
    }

        .wizard-progress::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 5rem;
            right: 5rem;
            height: 4px;
            background-color: #e9ecef;
            z-index: 1;
            transform: translateY(-50%);
        }

    .step-item {
        position: relative;
        z-index: 2;
        text-align: center;
        background: #f0f2f5;
        padding: 0 15px;
    }

    .step-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: #e9ecef;
        color: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.3rem;
        margin: 0 auto 0.5rem auto;
        border: 4px solid #f0f2f5;
    }

    .step-item.completed .step-circle {
        background-color: #198754;
        color: #fff;
    }

    .step-item.active .step-circle {
        background-color: #0d6efd;
        color: #fff;
        box-shadow: 0 0 0 5px rgba(13, 110, 253, 0.2);
    }

    .step-text {
        font-size: 0.9rem;
        font-weight: 700;
        color: #6c757d;
        text-transform: uppercase;
    }

    .step-item.active .step-text {
        color: #0d6efd;
    }

    .step-item.completed .step-text {
        color: #198754;
    }

    /* 3. KHUNG SOẠN THẢO WORD-PAPER */
    .word-paper {
        background: white;
        min-height: 1000px;
        padding: 60px 80px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        margin-bottom: 50px;
        border-radius: 8px;
    }

    /* 4. TINYMCE & QUOTE BOX */
    .tox-tinymce {
        border: none !important;
        box-shadow: none !important;
    }

    .tox-editor-header {
        border-bottom: 1px solid #f0f0f0 !important;
        position: sticky;
        top: 0;
        z-index: 99;
        background: white;
    }

    .tox-statusbar, .tox-promotion {
        display: none !important;
    }

    .quote-classic {
        background: #f8f9fa;
        border-left: 4px solid #007bff;
        padding: 20px;
        margin: 20px 0;
        border-radius: 5px;
        font-style: italic;
    }

    .quote-author {
        display: block;
        margin-top: 10px;
        font-weight: bold;
        text-align: right;
    }

    /* 5. CSS CHO Ô BỊ ẤN ĐỊNH (SLUG & CATEGORY) */
    .readonly-box {
        background-color: #f8f9fa !important;
        color: #6c757d !important;
        cursor: not-allowed;
        font-family: 'Courier New', Courier, monospace;
        font-weight: bold;
        border: 2px dashed #dee2e6 !important;
    }
</style>

<div class="container-fluid py-4 px-4">
    <div class="row mb-4">
        <div class="col-12 col-lg-10 mx-auto">
            <div class="wizard-progress">
                <div class="step-item completed"><div class="step-circle"><i class="bi bi-check-lg"></i></div><div class="step-text">Tạo Menu</div></div>
                <div class="step-item active"><div class="step-circle">2</div><div class="step-text">Viết bài</div></div>
                <div class="step-item"><div class="step-circle">3</div><div class="step-text">Cấu hình Sidebar</div></div>
            </div>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="TargetMenuId" />

        <div class="row g-4">
            <div class="col-12 col-lg-9">
                <div class="d-flex justify-content-center">
                    <div class="w-100" style="max-width: 1100px;">
                        <div class="word-paper">
                            <div class="text-uppercase text-muted fw-bold small mb-3"><i class="bi bi-file-earmark-text me-2"></i>Soạn thảo nội dung bài viết</div>
                            <textarea asp-for="ContentPage.Content" id="editor"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-3">
                <div class="sticky-top" style="top: 20px; z-index: 1000;">

                    <button type="submit" class="btn btn-primary w-100 py-3 mb-3 fw-bold shadow-sm rounded-3 fs-5">
                        Qua Bước 3 <i class="bi bi-arrow-right ms-1"></i>
                    </button>

                    <a asp-page="./Step1_Menu" asp-route-parentId="@Model.TargetMenuId" class="btn btn-light w-100 mb-4 text-secondary border-0 rounded-3 fw-bold shadow-sm">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại Bước 1
                    </a>

                    <div class="bg-white p-4 shadow-sm rounded-4">
                        <h6 class="fw-bold mb-4 text-dark border-bottom pb-2">Thông tin bài viết</h6>

                        <div class="mb-4">
                            <label class="form-label small fw-bold text-dark">Chuyên mục (Tự động)</label>
                            <input asp-for="ContentPage.Category" class="form-control readonly-box p-3" readonly tabindex="-1" />
                            <div class="form-text text-success small mt-2"><i class="bi bi-check-circle-fill"></i> Tự động ấn định theo Menu.</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label small fw-bold text-dark">Tiêu đề bài viết (*)</label>
                            <textarea asp-for="ContentPage.Title" id="articleTitle" class="form-control bg-light border-0 p-3" rows="3" placeholder="Nhập tiêu đề..." required autofocus></textarea>
                            <span asp-validation-for="ContentPage.Title" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold text-dark">Đường dẫn (Slug)</label>
                            <input asp-for="ContentPage.Slug" id="articleSlug" class="form-control readonly-box p-3" readonly tabindex="-1" placeholder="tu-dong-sinh-ra..." />
                            <div class="form-text text-danger small mt-2"><i class="bi bi-lock-fill"></i> Hệ thống tự quản lý.</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.8.2/tinymce.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {

            // ==========================================
            // 1. HÀM NÉN ẢNH THÔNG MINH (Chỉ nén ảnh > 1MB)
            // ==========================================
            function compressImage(file, quality = 0.7, maxWidth = 1920) {
                return new Promise((resolve, reject) => {
                    const reader = new FileReader();
                    reader.readAsDataURL(file);
                    reader.onload = event => {
                        const img = new Image();
                        img.src = event.target.result;
                        img.onload = () => {
                            let width = img.width;
                            let height = img.height;
                            if (width > maxWidth) {
                                height = Math.round(height * (maxWidth / width));
                                width = maxWidth;
                            }
                            const canvas = document.createElement('canvas');
                            canvas.width = width;
                            canvas.height = height;
                            const ctx = canvas.getContext('2d');
                            ctx.drawImage(img, 0, 0, width, height);
                            resolve(canvas.toDataURL('image/jpeg', quality));
                        };
                        img.onerror = error => reject(error);
                    };
                    reader.onerror = error => reject(error);
                });
            }

            // ==========================================
            // 2. CẤU HÌNH TINYMCE SIÊU CẤP
            // ==========================================
            tinymce.init({
                selector: '#editor',
                plugins: 'lists link image table autoresize wordcount code',
                toolbar: 'undo redo | blocks fontsize | bold italic underline forecolor | alignleft aligncenter alignright | bullist numlist | link image table quotebox | removeformat code',
                menubar: false,
                statusbar: false,
                min_height: 800,
                autoresize_bottom_margin: 50,
                content_style: `body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif; font-size: 18px; line-height: 1.6; padding: 10px; } img { max-width: 100%; height: auto; } .quote-classic { background: #f8f9fa; border-left: 4px solid #007bff; padding: 20px; font-style: italic; }`,

                images_upload_handler: (blobInfo, progress) => new Promise((resolve, reject) => {
                    const file = blobInfo.blob();
                    if (file.size < 1024 * 1024) {
                        const reader = new FileReader();
                        reader.onload = () => resolve(reader.result);
                        reader.readAsDataURL(file);
                        return;
                    }
                    compressImage(file, 0.7, 1920)
                        .then(base64 => resolve(base64))
                        .catch(err => reject({ message: 'Lỗi nén ảnh: ' + err.message, remove: true }));
                }),

                setup: function(editor) {
                    editor.ui.registry.addButton('quotebox', {
                        text: '📋 Trích dẫn',
                        onAction: function() {
                            editor.windowManager.open({
                                title: 'Tạo Trích dẫn đẹp',
                                body: { type: 'panel', items: [{ type: 'textarea', name: 'text', label: 'Nội dung' }, { type: 'input', name: 'author', label: 'Tác giả' }] },
                                buttons: [{ type: 'cancel', text: 'Hủy' }, { type: 'submit', text: 'Chèn', primary: true }],
                                onSubmit: function(api) {
                                    const d = api.getData();
                                    editor.insertContent(`<div class="quote-classic"><p>${d.text}</p><span class="quote-author">— ${d.author}</span></div><p>&nbsp;</p>`);
                                    api.close();
                                }
                            });
                        }
                    });
                }
            });

            // ==========================================
            // 3. LOGIC AUTO-SLUG
            // ==========================================
            function convertToSlug(text) {
                return text.toString().toLowerCase()
                    .normalize('NFD')
                    .replace(/[\u0300-\u036f]/g, '')
                    .replace(/[đĐ]/g, 'd')
                    .replace(/([^0-9a-z-\s])/g, '')
                    .replace(/\s+/g, '-')
                    .replace(/-+/g, '-')
                    .trim();
            }

            const titleInput = document.getElementById('articleTitle');
            const slugInput = document.getElementById('articleSlug');

            if(titleInput && slugInput) {
                titleInput.addEventListener('input', function(e) {
                    slugInput.value = convertToSlug(e.target.value);
                });
            }
        });
    </script>
}