@page
@model CMS.Pages.NavigationMenus.DeleteModel
@{
    ViewData["Title"] = "Xóa Menu";
}

<div class="container py-5" style="max-width: 500px;">
    <div class="card border-danger shadow-sm rounded-4">
        <div class="card-header bg-danger text-white py-3 text-center">
            <i class="bi bi-exclamation-triangle-fill display-4"></i>
            <h5 class="mb-0 mt-2">Xác nhận xóa</h5>
        </div>
        <div class="card-body p-4 text-center">
            <p class="text-muted">Bạn có chắc chắn muốn xóa menu này không?</p>

            <h4 class="fw-bold text-dark mb-1">@Model.NavigationMenu.Name</h4>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 fw-bold small"></div>

            <form method="post">
                <input type="hidden" asp-for="NavigationMenu.Id" />
                <div class="d-flex justify-content-center gap-2 mt-4">
                    <a asp-page="./Index" class="btn btn-light rounded-pill px-4">Hủy bỏ</a>
                    <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold">Xóa luôn</button>
                </div>
            </form>
        </div>
    </div>
</div>