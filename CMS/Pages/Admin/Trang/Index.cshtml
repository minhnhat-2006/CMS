@page
@model CMS.Pages.Trang.IndexModel
@{
    ViewData["Title"] = "Quản lý Trang";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Danh sách Trang</h2>
        <a asp-page="Create" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
            + Thêm Trang Mới
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Tiêu đề</th>
                        <th>Slug</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ContentPageList)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.Title</td>
                            <td class="text-muted">/@item.Slug</td>
                            <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.IsVisible)
                                {
                                    <span class="badge bg-success-subtle text-success rounded-pill px-3">Hiển thị</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-subtle text-secondary rounded-pill px-3">Ẩn</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3 me-1">Sửa</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill px-3">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>