@page
@model CMS.Pages.Trang.DeleteModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Xóa bài viết</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light p-4">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 500px; margin-top: 50px;">
        <div class="card-body text-center p-5">
            <h4 class="text-danger fw-bold mb-3">Cảnh báo Xóa!</h4>
            <p>Bạn có chắc chắn muốn xóa bài viết này không?</p>
            <p class="fw-bold text-dark border p-2 bg-light rounded">@Model.ContentPageItem.Title</p>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="ContentPageItem.Id" />

                <button type="submit" class="btn btn-danger px-4 me-2">Đồng ý Xóa</button>
                <a href="/Trang/Index?category=@Model.ContentPageItem.Category&layout=popup" class="btn btn-secondary px-4">Hủy bỏ</a>
            </form>
        </div>
    </div>
</body>
</html>