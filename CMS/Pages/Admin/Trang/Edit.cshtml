@page
@model CMS.Pages.Trang.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa bài viết";
}

<style>
    /* ... (CSS cũ của bạn) ... */
</style>

<div class="container-fluid mt-4 px-4">
    <form method="post">
        <input type="hidden" asp-for="ContentPageItem.Id" />
        <input type="hidden" asp-for="ContentPageItem.CreatedAt" /> <div class="row g-4">
            <div class="col-12 col-lg-9">
                <div class="d-flex justify-content-center">
                    <div class="w-100" style="max-width: 1100px;">
                        <div class="word-paper">
                            <div class="text-uppercase text-muted fw-bold small mb-3">Nội dung văn bản</div>
                            <textarea asp-for="ContentPageItem.Content" id="editor"></textarea>
                            <span asp-validation-for="ContentPageItem.Content" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-3">
                <div class="sticky-top" style="top: 20px; z-index: 1000;">
                    <button type="submit" class="btn btn-success w-100 py-3 mb-3 fw-bold shadow-sm rounded-3">
                        <i class="bi bi-check-circle-fill me-2"></i> Cập nhật bài viết
                    </button>
                    <a asp-page="Index" class="btn btn-light w-100 mb-4 text-muted border-0 rounded-3">Hủy bỏ</a>

                    <div class="bg-white p-4 shadow-sm rounded-4">
                        <h6 class="fw-bold mb-3">Thông tin bài viết</h6>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">Chuyên mục</label>

                            <select asp-for="ContentPageItem.Category"
                                    asp-items="@(ViewData["CategoryList"] as SelectList)"
                                    class="form-select bg-light border-0 p-3">
                                <option value="">-- Chọn chuyên mục --</option>
                            </select>

                            <span asp-validation-for="ContentPageItem.Category" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">Tiêu đề</label>
                            <textarea asp-for="ContentPageItem.Title" id="txtTitle" class="form-control bg-light border-0 p-3" rows="3"></textarea>
                            <span asp-validation-for="ContentPageItem.Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">Slug (URL)</label>
                            <div class="input-group">
                                <input asp-for="ContentPageItem.Slug" id="txtSlug" class="form-control bg-light border-0 text-muted" readonly />
                                <button class="btn btn-outline-secondary border-0" type="button" id="btnRegenSlug" title="Tạo lại Slug">
                                    <i class="bi bi-arrow-clockwise"></i>
                                </button>
                            </div>
                        </div>

                        <div class="form-check form-switch pt-2 border-top mt-3">
                            <input class="form-check-input" type="checkbox" asp-for="ContentPageItem.IsVisible">
                            <label class="form-check-label small fw-bold" asp-for="ContentPageItem.IsVisible">Hiển thị công khai</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.8.2/tinymce.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // --- HÀM NÉN ẢNH ---
            function compressImage(file, quality = 0.7, maxWidth = 1920) {
                return new Promise((resolve, reject) => {
                    const reader = new FileReader();
                    reader.readAsDataURL(file);
                    reader.onload = event => {
                        const img = new Image();
                        img.src = event.target.result;
                        img.onload = () => {
                            let width = img.width, height = img.height;
                            if (width > maxWidth) {
                                height = Math.round(height * (maxWidth / width));
                                width = maxWidth;
                            }
                            const canvas = document.createElement('canvas');
                            canvas.width = width; canvas.height = height;
                            const ctx = canvas.getContext('2d');
                            ctx.drawImage(img, 0, 0, width, height);
                            resolve(canvas.toDataURL('image/jpeg', quality));
                        };
                        img.onerror = reject;
                    };
                    reader.onerror = reject;
                });
            }

            // --- TINYMCE INIT ---
            tinymce.init({
                selector: '#editor',
                plugins: 'lists link image table autoresize wordcount code',
                toolbar: 'undo redo | blocks fontsize | bold italic underline forecolor | alignleft aligncenter alignright | bullist numlist | link image table quotebox | removeformat code',
                menubar: false, statusbar: false, min_height: 800, autoresize_bottom_margin: 50,

                // Cấu hình upload ảnh (Đã sửa lỗi cú pháp)
                images_upload_handler: (blobInfo, progress) => new Promise((resolve, reject) => {
                    const file = blobInfo.blob();
                    if (file.size < 1024 * 1024) { // < 1MB
                        const reader = new FileReader();
                        reader.onload = () => resolve(reader.result);
                        reader.readAsDataURL(file);
                    } else { // > 1MB -> Nén
                        compressImage(file, 0.7, 1920)
                            .then(base64 => resolve(base64))
                            .catch(err => reject({ message: 'Lỗi: ' + err, remove: true }));
                    }
                }),

                // Plugin QuoteBox
                setup: function(editor) {
                    editor.ui.registry.addButton('quotebox', {
                        text: '📋 Trích dẫn',
                        onAction: function() {
                            editor.windowManager.open({
                                title: 'Tạo Quote Box',
                                body: { type: 'panel', items: [{ type: 'textarea', name: 'text', label: 'Nội dung' }, { type: 'input', name: 'author', label: 'Tác giả' }] },
                                buttons: [{ type: 'cancel', text: 'Hủy' }, { type: 'submit', text: 'Chèn', primary: true }],
                                onSubmit: function(api) {
                                    const d = api.getData();
                                    editor.insertContent(`<div class="quote-classic"><p>${d.text}</p><span class="quote-author">— ${d.author}</span></div><p>&nbsp;</p>`);
                                    api.close();
                                }
                            });
                        }
                    });
                }
            });

            // --- SLUG GEN ---
            document.getElementById("btnRegenSlug")?.addEventListener('click', function() {
                if(confirm("Đổi Slug sẽ làm link cũ bị lỗi 404. Tiếp tục?")) {
                    var title = document.getElementById("txtTitle").value;
                    var slug = title.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '').replace(/[đĐ]/g, 'd').replace(/[^0-9a-z-\s]/g, '').replace(/(\s+)/g, '-').replace(/-+/g, '-').replace(/^-+|-+$/g, '');
                    document.getElementById("txtSlug").value = slug;
                }
            });
        });
    </script>
}