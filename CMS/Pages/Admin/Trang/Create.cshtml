@page
@model CMS.Pages.Trang.CreateModel
@{
    ViewData["Title"] = "Viết bài mới";
}

<style>
    /* 1. NỀN CHUNG */
    body {
        background-color: #f0f2f5;
    }

    /* 2. KHUNG SOẠN THẢO (GIỐNG FILE EDIT) */
    .word-paper {
        background: white;
        min-height: 1000px;
        padding: 60px 80px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        margin-bottom: 50px;
    }

    /* 3. TINYMCE */
    .tox-tinymce {
        border: none !important;
        box-shadow: none !important;
    }

    .tox-editor-header {
        border-bottom: 1px solid #f0f0f0 !important;
        position: sticky;
        top: 0;
        z-index: 99;
        background: white;
    }

    .tox-statusbar, .tox-promotion {
        display: none !important;
    }

    /* 4. QUOTE BOX */
    .quote-classic {
        background: #f8f9fa;
        border-left: 4px solid #007bff;
        padding: 20px;
        margin: 20px 0;
        border-radius: 5px;
        font-style: italic;
    }

    .quote-author {
        display: block;
        margin-top: 10px;
        font-weight: bold;
        text-align: right;
    }
</style>

<div class="container-fluid mt-4 px-4">
    <form method="post">
        <div class="row g-4">
            <div class="col-12 col-lg-9">
                <div class="d-flex justify-content-center">
                    <div class="w-100" style="max-width: 1100px;">
                        <div class="word-paper">
                            <div class="text-uppercase text-muted fw-bold small mb-3">Soạn thảo văn bản</div>
                            <textarea asp-for="ContentPageItem.Content" id="editor"></textarea>
                            <span asp-validation-for="ContentPageItem.Content" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-3">
                <div class="sticky-top" style="top: 20px; z-index: 1000;">

                    <button type="submit" class="btn btn-primary w-100 py-3 mb-3 fw-bold shadow-sm rounded-3">
                        <i class="bi bi-floppy2-fill me-2"></i> Lưu bài viết
                    </button>

                    <a asp-page="Index" class="btn btn-light w-100 mb-4 text-muted border-0 rounded-3">Hủy bỏ</a>

                    <div class="bg-white p-4 shadow-sm rounded-4">
                        <h6 class="fw-bold mb-3">Thông tin bài viết</h6>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">Chuyên mục</label>
                            <select asp-for="ContentPageItem.Category" asp-items="ViewBag.CategoryList" class="form-select bg-light border-0 p-3">
                                <option value="">-- Chọn chuyên mục --</option>
                            </select>
                            <span asp-validation-for="ContentPageItem.Category" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">Tiêu đề</label>
                            <textarea asp-for="ContentPageItem.Title" id="txtTitle" class="form-control bg-light border-0 p-3" rows="3" placeholder="Nhập tiêu đề..."></textarea>
                            <span asp-validation-for="ContentPageItem.Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">Slug (Tự động)</label>
                            <input asp-for="ContentPageItem.Slug" id="txtSlug" class="form-control bg-light border-0 text-muted" readonly />
                        </div>

                        <div class="form-check form-switch pt-2 border-top mt-3">
                            <input class="form-check-input" type="checkbox" asp-for="ContentPageItem.IsVisible" checked>
                            <label class="form-check-label small fw-bold" asp-for="ContentPageItem.IsVisible">Hiển thị công khai</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.8.2/tinymce.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {

            // --- 1. HÀM NÉN ẢNH (MAGIC FUNCTION - Giống Edit) ---
            function compressImage(file, quality = 0.7, maxWidth = 1920) {
                return new Promise((resolve, reject) => {
                    const reader = new FileReader();
                    reader.readAsDataURL(file);
                    reader.onload = event => {
                        const img = new Image();
                        img.src = event.target.result;
                        img.onload = () => {
                            let width = img.width;
                            let height = img.height;
                            if (width > maxWidth) {
                                height = Math.round(height * (maxWidth / width));
                                width = maxWidth;
                            }
                            const canvas = document.createElement('canvas');
                            canvas.width = width;
                            canvas.height = height;
                            const ctx = canvas.getContext('2d');
                            ctx.drawImage(img, 0, 0, width, height);
                            // Nén JPEG 70%
                            resolve(canvas.toDataURL('image/jpeg', quality));
                        };
                        img.onerror = error => reject(error);
                    };
                    reader.onerror = error => reject(error);
                });
            }

            // --- 2. CẤU HÌNH TINYMCE ---
            tinymce.init({
                selector: '#editor',
                plugins: 'lists link image table autoresize wordcount code',
                toolbar: 'undo redo | blocks fontsize | bold italic underline forecolor | alignleft aligncenter alignright | bullist numlist | link image table quotebox | removeformat code',
                menubar: false,
                statusbar: false,
                min_height: 800,
                autoresize_bottom_margin: 50,
                content_style: `body { font-family: 'Times New Roman', serif; font-size: 19px; line-height: 1.6; padding: 10px; } img { max-width: 100%; height: auto; } .quote-classic { background: #f8f9fa; border-left: 4px solid #007bff; padding: 20px; font-style: italic; }`,

                // XỬ LÝ UPLOAD ẢNH THÔNG MINH
                images_upload_handler: (blobInfo, progress) => new Promise((resolve, reject) => {
                    const file = blobInfo.blob();
                    // < 1MB thì giữ nguyên
                    if (file.size < 1024 * 1024) {
                        const reader = new FileReader();
                        reader.onload = () => resolve(reader.result);
                        reader.readAsDataURL(file);
                        return;
                    }
                    // > 1MB thì nén
                    compressImage(file, 0.7, 1920)
                        .then(base64 => resolve(base64))
                        .catch(err => reject({ message: 'Lỗi nén ảnh: ' + err.message, remove: true }));
                }),

                setup: function(editor) {
                    editor.ui.registry.addButton('quotebox', {
                        text: '📋 Trích dẫn',
                        onAction: function() {
                            editor.windowManager.open({
                                title: 'Tạo Trích dẫn',
                                body: { type: 'panel', items: [{ type: 'textarea', name: 'text', label: 'Nội dung' }, { type: 'input', name: 'author', label: 'Tác giả' }] },
                                buttons: [{ type: 'cancel', text: 'Hủy' }, { type: 'submit', text: 'Chèn', primary: true }],
                                onSubmit: function(api) {
                                    const d = api.getData();
                                    editor.insertContent(`<div class="quote-classic"><p>${d.text}</p><span class="quote-author">— ${d.author}</span></div><p>&nbsp;</p>`);
                                    api.close();
                                }
                            });
                        }
                    });
                }
            });

            // --- 3. LOGIC SLUG (TỰ ĐỘNG - KHÁC VỚI EDIT) ---
            // Với trang Tạo mới, ta cho phép Slug tự động thay đổi khi gõ Tiêu đề cho tiện
            const titleInput = document.getElementById("txtTitle");
            const slugInput = document.getElementById("txtSlug");

            if (titleInput && slugInput) {
                titleInput.addEventListener('input', function() {
                    slugInput.value = toSlug(this.value);
                });
            }

            function toSlug(str) {
                if (!str) return "";
                str = str.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '').replace(/[đĐ]/g, 'd').replace(/([^0-9a-z-\s])/g, '').replace(/(\s+)/g, '-').replace(/-+/g, '-').replace(/^-+|-+$/g, '');
                return str;
            }
        });
    </script>
}