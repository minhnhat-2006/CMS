@page
@model CMS.Pages.Sidebar.CreateModel

@{
    ViewData["Title"] = "Thêm Sidebar mới";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-plus-circle"></i> Thêm Sidebar Mới</h2>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-4">
            <form method="post">
                @* Hiển thị lỗi tổng quan nếu có *@
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Tiêu đề (Title) <span class="text-danger">*</span></label>
                        <input asp-for="SidebarItem.Title" class="form-control" placeholder="VD: Banner Khuyến Mãi" />
                        <span asp-validation-for="SidebarItem.Title" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Thứ tự hiển thị (Sort Order)</label>
                        <input asp-for="SidebarItem.SortOrder" class="form-control" type="number" value="0" />
                        <small class="text-muted">Số nhỏ hiện trên, số lớn hiện dưới.</small>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Nội dung / Mô tả ngắn</label>
                    <textarea asp-for="SidebarItem.Content" class="form-control" rows="3" placeholder="Nhập nội dung hoặc mã HTML (nếu có)..."></textarea>
                    <span asp-validation-for="SidebarItem.Content" class="text-danger"></span>
                </div>

                <div class="card p-3 mb-4 bg-light border-primary border-opacity-25">
                    <label class="form-label fw-bold text-primary">
                        <i class="bi bi-diagram-3-fill"></i> Hiển thị ở Menu nào?
                    </label>

                    <select asp-for="SidebarItem.MenuId"
                            class="form-select form-select-lg"
                            asp-items="ViewBag.MenuId">
                        <option value="">-- Chọn Menu cha (Bắt buộc nếu muốn hiện riêng) --</option>
                    </select>
                    <span asp-validation-for="SidebarItem.MenuId" class="text-danger"></span>

                    <small class="text-muted mt-2 d-block">
                        💡 <strong>Lưu ý:</strong> Sidebar này sẽ chỉ xuất hiện khi người dùng truy cập vào Menu bạn chọn ở trên.
                        Nếu để trống, nó có thể không hiển thị hoặc hiển thị ở trang chủ (tùy cấu hình).
                    </small>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-link-45deg"></i> Liên kết đến bài viết nội bộ?
                        </label>
                        <select asp-for="SidebarItem.ContentPageId"
                                class="form-select"
                                asp-items="@((SelectList)ViewData["PageList"])">
                            <option value="">-- Không liên kết bài viết --</option>
                        </select>
                        <small class="text-muted">Khi click vào tiêu đề Sidebar sẽ chuyển đến bài này.</small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-box-arrow-up-right"></i> Hoặc Link ngoài (External)
                        </label>
                        <input asp-for="SidebarItem.LinkUrl" class="form-control" placeholder="https://google.com" />
                        <small class="text-muted">Nhập link đầy đủ (có https://) nếu muốn trỏ ra web ngoài.</small>
                    </div>
                </div>

                <div class="mb-4 form-check form-switch">
                    <input asp-for="SidebarItem.IsVisible" class="form-check-input" type="checkbox" checked />
                    <label class="form-check-label fw-bold" asp-for="SidebarItem.IsVisible">
                        Kích hoạt hiển thị ngay
                    </label>
                </div>

                <hr />

                <div class="d-flex gap-2 justify-content-end">
                    <a asp-page="./Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary px-4 fw-bold">
                        <i class="bi bi-save"></i> Lưu Sidebar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}