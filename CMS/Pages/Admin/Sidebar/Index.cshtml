@page
@model CMS.Pages.Sidebar.IndexModel
@{
    ViewData["Title"] = "Quản lý Sidebar / Banner";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold mb-0">
            <i class="bi bi-images"></i> Quản lý Sidebar & Banner
        </h2>
        <p class="text-muted small mb-0">Quản lý các banner quảng cáo, thông báo bên phải bài viết.</p>
    </div>

    <button type="button" class="btn btn-success btn-lg shadow-sm" data-bs-toggle="modal" data-bs-target="#createSidebarModal">
        <i class="bi bi-plus-lg"></i> Thêm Mới
    </button>
</div>

<div class="card shadow border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="bg-light text-dark">
                    <tr>
                        <th class="text-center py-3" style="width: 50px;">TT</th>
                        <th class="py-3" style="width: 25%;">Tiêu đề</th>
                        <th class="py-3">Vị trí hiển thị (Menu)</th>
                        <th class="py-3">Liên kết đến</th>
                        <th class="text-center py-3">Trạng thái</th>
                        <th class="text-center py-3" style="width: 150px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.SidebarList != null && Model.SidebarList.Any())
                    {
                        @foreach (var item in Model.SidebarList)
                        {
                            <tr>
                                <td class="text-center fw-bold text-muted">@item.SortOrder</td>

                                <td>
                                    <span class="fw-bold text-primary">@item.Title</span>
                                    @if (!string.IsNullOrEmpty(item.Content))
                                    {
                                        <div class="small text-muted text-truncate" style="max-width: 200px;">
                                            @Html.Raw(item.Content)
                                        </div>
                                    }
                                </td>

                                <td>
                                    @if (item.Menu != null)
                                    {
                                        <span class="badge bg-info text-dark border">
                                            <i class="bi bi-folder2-open"></i> @item.Menu.Name
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary text-white border">
                                            <i class="bi bi-globe"></i> Tất cả các trang
                                        </span>
                                    }
                                </td>

                                <td>
                                    @if (item.ContentPage != null)
                                    {
                                        <span class="text-success"><i class="bi bi-file-text"></i> @item.ContentPage.Title</span>
                                    }
                                    else if (!string.IsNullOrEmpty(item.LinkUrl))
                                    {
                                        <a href="@item.LinkUrl" target="_blank" class="text-decoration-none">
                                            <i class="bi bi-link-45deg"></i> Link ngoài
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>

                                <td class="text-center">
                                    @if (item.IsVisible)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Hiện</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="bi bi-eye-slash"></i> Ẩn</span>
                                    }
                                </td>

                                <td class="text-center">
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-dark">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <button type="button" class="btn btn-danger btn-sm"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal"
                                            onclick="setDeleteId(@item.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="6" class="text-center py-5 text-muted">Chưa có dữ liệu Sidebar nào.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="createSidebarModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold">Thêm Sidebar / Banner Mới</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <form method="post" asp-page-handler="CreateQuick">
                <div class="modal-body p-4 bg-light">

                    <div class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label fw-bold">Tiêu đề Sidebar <span class="text-danger">*</span></label>
                            <input asp-for="NewSidebar.Title" class="form-control" placeholder="VD: Tin nổi bật, Thông báo..." required />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-bold">Thứ tự hiển thị</label>
                            <input asp-for="NewSidebar.SortOrder" class="form-control" type="number" value="1" />
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-bold text-primary">Hiển thị ở Menu nào?</label>
                            <select asp-for="NewSidebar.MenuId" class="form-select" asp-items="@(ViewData["MenuList"] as SelectList)">
                                <option value="">-- Chọn Menu (Bắt buộc) --</option>
                            </select>
                            <div class="form-text text-muted">
                                <i class="bi bi-info-circle-fill"></i> Chọn Menu để Sidebar chỉ xuất hiện khi khách vào chuyên mục đó.
                            </div>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-bold">Nội dung (HTML hoặc Text)</label>
                            <textarea asp-for="NewSidebar.Content" class="form-control" rows="3" placeholder="Nhập nội dung ngắn hoặc mã HTML ảnh..."></textarea>
                        </div>

                        <hr class="my-2">

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Liên kết đến Bài viết</label>
                            <select asp-for="NewSidebar.ContentPageId" class="form-select" asp-items="@(ViewData["PageList"] as SelectList)">
                                <option value="">-- Không liên kết --</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Hoặc Link ngoài (URL)</label>
                            <input asp-for="NewSidebar.LinkUrl" class="form-control" placeholder="https://..." />
                        </div>

                        <div class="col-12">
                            <div class="form-check form-switch mt-2">
                                <input asp-for="NewSidebar.IsVisible" class="form-check-input" type="checkbox" checked />
                                <label class="form-check-label fw-bold" asp-for="NewSidebar.IsVisible">Hiển thị ngay lập tức</label>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer bg-white">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy bỏ</button>
                    <button type="submit" class="btn btn-primary px-4 fw-bold">Lưu Sidebar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa Sidebar này không? Hành động này không thể hoàn tác.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form method="post" asp-page-handler="DeleteQuick">
                    <input type="hidden" name="id" id="deleteIdInput" />
                    <button type="submit" class="btn btn-danger">Xóa ngay</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function setDeleteId(id) {
        document.getElementById('deleteIdInput').value = id;
    }
</script>