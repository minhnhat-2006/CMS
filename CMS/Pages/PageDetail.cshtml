@page "/bai-viet/{id:int}/{slug?}"
@model CMS.Pages.PageDetailModel
@{
    ViewData["Title"] = Model.ContentPage.Title;

    // --- LOGIC MỚI: Kiểm tra xem bài này có bật Sidebar không ---
    // Nếu HasSidebar = true -> showSidebar = true
    bool showSidebar = Model.ContentPage.HasSidebar;

    // Tính toán class cho cột nội dung:
    // - Có Sidebar: dùng col-lg-8 (chiếm 2/3 màn hình)
    // - Không Sidebar: dùng col-12 (chiếm full màn hình)
    string contentClass = showSidebar ? "col-lg-8" : "col-12";
}

<style>
    /* =========================================================
                    NỀN VÀ CẤU TRÚC CHUNG
               ========================================================= */
    body {
        background-color: #f0f2f5;
    }

    .page-container {
        padding: 40px 0;
        min-height: 100vh;
    }

    /* =========================================================
                    TỜ GIẤY BÀI VIẾT (CỘT TRÁI)
               ========================================================= */
    .paper-view {
        background: white;
        min-height: 800px;
        padding: 50px 60px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border-radius: 8px;
        position: relative;
        transition: all 0.3s ease; /* Thêm hiệu ứng mượt khi thay đổi kích thước */
    }

    /* TYPOGRAPHY */
    .page-title {
        font-family: 'Times New Roman', serif;
        font-size: 2.6rem;
        font-weight: bold;
        color: #1a1a1a;
        margin-bottom: 1.2rem;
        line-height: 1.3;
    }

    .page-meta {
        display: flex;
        align-items: center;
        gap: 15px;
        padding-bottom: 25px;
        margin-bottom: 35px;
        color: #6c757d;
        font-size: 0.95rem;
        border-bottom: 1px solid #eee;
    }

    .badge-category {
        background-color: #e9ecef;
        color: #495057;
        font-weight: 600;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
    }

    /* NỘI DUNG BÀI VIẾT (TinyMCE Output) */
    .content-body {
        font-family: 'Times New Roman', serif;
        font-size: 20px;
        line-height: 1.7;
        color: #2c3e50;
        text-align: justify;
    }

        .content-body img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 25px auto;
            border-radius: 4px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .content-body h2 {
            font-size: 1.8rem;
            margin-top: 2rem;
            margin-bottom: 1rem;
            color: #000;
            border-left: 4px solid #0d6efd;
            padding-left: 15px;
        }

        .content-body h3 {
            font-size: 1.5rem;
            margin-top: 1.5rem;
            font-weight: bold;
        }

        /* Quote Box */
        .content-body .quote-classic {
            background: #f8f9fa;
            border-left: 5px solid #007bff;
            padding: 25px;
            margin: 30px 0;
            font-style: italic;
            color: #555;
        }

        /* Table */
        .content-body table {
            width: 100%;
            border-collapse: collapse;
            margin: 25px 0;
            font-size: 18px;
        }

            .content-body table th {
                background-color: #003366;
                color: white;
                text-align: left;
                padding: 12px 15px;
            }

            .content-body table td {
                border: 1px solid #dee2e6;
                padding: 12px 15px;
            }

            .content-body table tr:nth-child(even) {
                background-color: #f8f9fa;
            }

    /* BACK BUTTON */
    .back-button {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        margin-top: 60px;
        padding: 12px 28px;
        background: #f1f3f5;
        color: #495057;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.2s ease;
    }

        .back-button:hover {
            background: #e2e6ea;
            color: #212529;
            transform: translateX(-3px);
        }

    /* =========================================================
                    SIDEBAR
               ========================================================= */
    .sidebar-wrapper {
        padding-left: 20px;
    }

    /* Tùy chỉnh thêm: Khi full màn hình (không có sidebar), canh lề rộng hơn cho dễ đọc */
    .col-12 .paper-view {
        padding: 60px 100px;
    }

    @@media (max-width: 992px) {
        .sidebar-wrapper {
            padding-left: 0;
            margin-top: 40px;
        }

        .paper-view, .col-12 .paper-view {
            padding: 30px 20px; /* Reset padding trên mobile */
        }

        .page-title {
            font-size: 2rem;
        }
    }
</style>

<div class="page-container">
    <div class="container">
        <div class="row">

            <div class="@contentClass">
                <div class="paper-view">
                    <article>
                        <h1 class="page-title">@Model.ContentPage.Title</h1>

                        <div class="page-meta">
                            <span>
                                <i class="bi bi-calendar-event me-1"></i>
                                @Model.ContentPage.CreatedAt.ToString("dd/MM/yyyy")
                            </span>

                            <span class="badge-category">
                                <i class="bi bi-folder2-open me-1"></i>
                                @Model.ContentPage.Category
                            </span>
                        </div>

                        <div class="content-body">
                            @Html.Raw(Model.ContentPage.Content)
                        </div>
                    </article>

                    <a href="/" class="back-button">
                        <i class="bi bi-arrow-left"></i>
                        Quay lại trang chủ
                    </a>
                </div>
            </div>

            @if (showSidebar)
            {
                <div class="col-lg-4">
                    <div class="sidebar-wrapper sticky-top" style="top: 20px; z-index: 10;">
                        @await Component.InvokeAsync("Sidebar", new { currentCategory = Model.ContentPage.Category })
                    </div>
                </div>
            }

        </div>
    </div>
</div>